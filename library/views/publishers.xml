<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- actions opening views on models -->
        <record
                id="library_publishers_act"
                model="ir.actions.act_window">
            <field name="name">Publishers</field>
            <field name="res_model">library.publisher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record
                model="ir.ui.view"
                id="publisher_form_view">
            <field name="name">publisher.form</field>
            <field name="model">library.publisher</field>
            <field
                    name="arch"
                    type="xml">
                <form string="Add new publisher">
                    <sheet>
                        <group>
                            <field
                                    name="name"
                                    string="Title" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record
                model="ir.ui.view"
                id="publisher_tree_view">
            <field name="name">publisher.tree</field>
            <field name="model">library.publisher</field>
            <field
                    name="arch"
                    type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>
    </data>
</odoo>