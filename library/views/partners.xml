<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- actions opening views on models -->
        <record
                id="library_partners_act"
                model="ir.actions.act_window">
            <field name="name">Partners</field>
            <field name="res_model">library.partner</field>
            <field name="view_mode">tree,form,search</field>
        </record>

        <record
                model="ir.ui.view"
                id="partner_form_view">
            <field name="name">partner.form</field>
            <field name="model">library.partner</field>
            <field
                    name="arch"
                    type="xml">
                <form string="Add new partner">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="email" />
                            <field name="address" />
                            <field name="partner_type" />
                            <field
                                    name="rental_ids"
                                    string="Rentals" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record
                model="ir.ui.view"
                id="partner_tree_view">
            <field name="name">partner.tree</field>
            <field name="model">library.partner</field>
            <field
                    name="arch"
                    type="xml">
                <tree>
                    <field name="name" />
                    <field name="email" />
                    <field name="address" />
                    <field name="partner_type" />
                    <field
                            name="rental_ids"
                            string="Rentals" />
                </tree>
            </field>
        </record>

        <!-- Search view -->
        <record
                model="ir.ui.view"
                id="partner_search_view">
            <field name="name">partner.search</field>
            <field name="model">library.partner</field>
            <field
                    name="arch"
                    type="xml">
                <search>
                    <field name="name" />
                    <filter
                            name="only_authors"
                            string="Only Authors"
                            domain="[('partner_type', '=', 'author')]" />
                    <filter
                            name="only_customers"
                            string="Only Customers"
                            domain="[('partner_type', '=', 'customer')]" />
                </search>
            </field>
        </record>
    </data>
</odoo>