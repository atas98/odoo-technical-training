<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data>
    <record
        model="ir.module.category"
        id="module_category_openacademy">
      <field name="name">Open Academy</field>
      <field name="description">Open Academy students, maesters and archmaesters</field>
    </record>

    <record
        id="group_apprentices"
        model="res.groups">
      <field name="name">Apprentices</field>
      <field
          name="category_id"
          ref="openacademy.module_category_openacademy" />
      <field
          name="implied_ids"
          eval="[(4,ref('base.group_user'))]" />
    </record>

    <record
        id="group_maesters"
        model="res.groups">
      <field name="name">Maesters</field>
      <field
          name="category_id"
          ref="openacademy.module_category_openacademy" />
      <field
          name="implied_ids"
          eval="[(4,ref('openacademy.group_apprentices'))]" />
    </record>

    <record
        id="group_archmaesters"
        model="res.groups">
      <field name="name">Archmaesters</field>
      <field
          name="category_id"
          ref="openacademy.module_category_openacademy" />
      <field
          name="implied_ids"
          eval="[(4,ref('openacademy.group_maesters'))]" />
    </record>

    <record
        id="responsible_can_modify"
        model="ir.rule">
      <field name="name">Responsible can modify Course</field>
      <field
          name="model_id"
          ref="model_openacademy_course" />
      <field
          name="groups"
          eval="[(4, ref('openacademy.group_maesters'))]" />
      <field
          name="perm_read"
          eval="0" />
      <field
          name="perm_write"
          eval="1" />
      <field
          name="perm_create"
          eval="0" />
      <field
          name="perm_unlink"
          eval="1" />
      <field name="domain_force">
                ['|', ('responsible_id','=',False), ('responsible_id','=',user.id)]
      </field>
    </record>

    <record
        id="archmaesters_can_modify"
        model="ir.rule">
      <field name="name">Archmaesters can modify Course</field>
      <field
          name="model_id"
          ref="model_openacademy_course" />
      <field
          name="groups"
          eval="[(4, ref('openacademy.group_archmaesters'))]" />
      <field
          name="perm_read"
          eval="1" />
      <field
          name="perm_write"
          eval="1" />
      <field
          name="perm_create"
          eval="1" />
      <field
          name="perm_unlink"
          eval="1" />
      <field name="domain_force">
        [(1, '=', 1)]
      </field>
    </record>
  </data>
</odoo>